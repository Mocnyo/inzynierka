{% extends '@App/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Twoje projekty</h6>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Skrót</th>
                            <th>Status</th>
                            <th>Kierownik</th>
                            <th>Czas</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{ project.project.name }}</td>
                            <td>{{ project.project.shortname }}</td>
                            <td>{{ project.project.status }}</td>
                            <td><s>Andrzej Kierownik</s></td>
                            <td>{{ project.project.time }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Zadania przypisane tobie</h6>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Projekt</th>
                            <th>Działania</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{ task.name }}</td>
                            <td>{{ task.project.name }}</td>
                            <td>
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                <a class="btn btn-secondary btn-sm"  href="{{ path('specific_task', {'id': task.id}) }}">
                                    Pokaż
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Wszystkie zadania</h6>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Skrót</th>
                            <th>Czas</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>test</td>
                                <td>test</td>
                                <td>test</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}