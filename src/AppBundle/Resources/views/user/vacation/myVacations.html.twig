{% extends '@App/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Dostępny urlop</h6>
                </div>
                <div class="card-body text-center">
                    <h3>{{ user.vacationAvailable }} dni</h3>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Wykorzystany urlop</h6>
                </div>
                <div class="card-body text-center">
                    <h3>{{ usedVacation }} / {{ user.vacationTime }} dni</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Aktywne urlopy</h6>
                </div>
                <div class="card-body">
                    <table class="table table-hover text-center">
                        <thead>
                        <tr>
                            <th>Rozpoczęcie</th>
                            <th>Zakończenie</th>
                            <th>Tytuł</th>
                            <th>Zaakceptowany</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vacation in vacations %}
                            {% if vacation.isAccepted == 1 and vacation.endAt|date('Y-m-d') > currentDate|date('Y-m-d') %}
                                <tr>
                                    <td>{{ vacation.beginAt|date('Y-m-d') }}</td>
                                    <td>{{ vacation.endAt|date('Y-m-d') }}</td>
                                    <td>{{ vacation.title }}</td>
                                    <td>Tak</td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Urlopy w oczekiwaniu na zatwierdzenie</h6>
                    <div class="float-right">
                        {% if app.user.vacationAvailable > 0 %}
                        <a class="btn btn-secondary btn-sm" href="{{ path('vacation_new') }}">
                            Dodaj
                        </a>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover text-center">
                        <thead>
                        <tr>
                            <th>Rozpoczęcie</th>
                            <th>Zakończenie</th>
                            <th>Tytuł</th>
                            <th>Zaakceptowany</th>
                            <th>Lista</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vacation in vacations %}
                            {% if vacation.isAccepted == 0 and vacation.beginAt|date('Y-m-d') > currentDate|date('Y-m-d') %}
                                <tr>
                                    <td>{{ vacation.beginAt|date('Y-m-d') }}</td>
                                    <td>{{ vacation.endAt|date('Y-m-d') }}</td>
                                    <td>{{ vacation.title }}</td>
                                    <td>Nie</td>
                                    <td>
                                        <a class="btn btn-secondary btn-sm"
                                           href="{{ path('vacation_edit', { 'id': vacation.id }) }}">
                                            Edytuj
                                        </a>
                                        <a class="btn btn-danger btn-sm"
                                           href="{{ path('vacation_delete', {'id': vacation.id}) }}">
                                            Usuń
                                        </a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}