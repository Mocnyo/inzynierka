{% extends '@App/layout.html.twig' %}

{% block title %}
{{ parent() }} - post
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-sm-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold float-left text-primary">{{ post.name}}</h4>
                <div class="form-group float-right d-inline-block">
                    <a class="btn btn-sm btn-secondary" href="{{ path('post') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Wróć
                    </a>
                    <a class="btn btn-sm btn-primary" href="{{ path('post_edit', { 'id':  post.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edytuj
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12">
                        {{ post.description | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

