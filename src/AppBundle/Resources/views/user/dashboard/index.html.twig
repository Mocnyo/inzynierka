{% extends '@App/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Miłego dnia</h6>
                </div>
                <div class="card-body" style="height: 350px; overflow: auto">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>Dzień dobry</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Zalogowałeś się jako</p>
                            <p>Stanowisko</p>
                            <p>Podsumowanie miesiąca</p>
                            <p>Dział</p>
                            <p>Urlop</p>
                            <p>Umowa</p>
                        </div>
                        <div class="col-sm-6 justify-content-center">
                            <p>{{ app.user.fullName }}</p>
                            <p>{{ app.user.position }}</p>
                            <p name="hours"></p>
                            <p>{{ app.user.team }}</p>
                            <p>{{ app.user.vacationAvailable }} dni</p>
                            <p>{{ app.user.agreementTime.agreement.name }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Twoje projekty</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body"  style="height: 350px; overflow: auto">
                    <table class="table table-hover text-center">
                        <thead>
                        <tr>
                            <th>Skrót</th>
                            <th>Status</th>
                            <th>Kierownik</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in user.project %}
                            <tr>
                                <td>{{ project.shortName }}</td>
                                <td>{{ project.status }}</td>
                                <td>{{ project.owner.fullName }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bieżący miesiąc</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class=""></div>
                            </div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class=""></div>
                            </div>
                        </div>
                        <canvas id="myBarChart" style="display: block; width: 994px; height: 320px;" width="994"
                                height="320"
                                class="chartjs-render-monitor"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}