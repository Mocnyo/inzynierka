{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Użytkownik
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h4 class="m-0 font-weight-bold float-left text-primary">Widok użytkownika</h4>
                    <div class="form-group float-right">
                        <a class="btn btn-secondary btn-sm" href="{{ path('user') }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            Wróć
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Id</strong></p>
                                <p>
                                    {{ user.id }}
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Fullname</strong></p>
                                <p>
                                    {{ user.fullName }}
                                </p>

                            </div>
                            <div class="col-md-6">
                                <p><strong>Specialization</strong></p>
                                <p>
                                    {{ user.specialization }}
                                </p>
                            </div>
                        </div>

                        <hr/>


                        <div class="form-group float-right">
                            <a class="btn btn-primary" href="{{ path('user_edit', { 'id':  user.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                Edytuj
                            </a>
                            <a class="btn btn-info" href="{{ path('user_new') }}">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                Nowy
                            </a>
                            <form action="{{ path('user_delete', { 'id': user.id }) }}" method="post"
                                  style="display: inline-block">
                                <input type="hidden" name="_method" value="DELETE"/>
                                {{ form_widget(delete_form) }}
                                <button class="btn btn-danger" type="submit"
                                        onclick="return confirm('Are you sure');">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    Usuń
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

