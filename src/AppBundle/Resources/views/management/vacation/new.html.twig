{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit leave
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Edytuj urlop</h6>
                    <div class=" float-right">
                        <a class="btn btn-secondary btn-sm" href="{{ path('vacations') }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            Powrót
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row justify-content-center">
                        <div class="form-group col-sm-6">
                            {{ form_row(form.beginAt, {'attr': { 'class': 'form-control' }}) }}
                            {{ form_row(form.endAt, {'attr': { 'class': 'form-control' }}) }}
                            {{ form_row(form.title, {'attr': { 'class': 'form-control' }}) }}
                            {% if form.isAccepted is defined %}
                                {{ form_row(form.isAccepted, {'attr': { 'class': 'form-control'}}) }}
                                {{ form_row(form.user, {'attr': { 'class': 'form-control' }}) }}
                            {% endif %}
                            <br>
                            <button type="submit" name="submit" value="save" class="btn btn-primary float-right">
                                Zatwierdź <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

