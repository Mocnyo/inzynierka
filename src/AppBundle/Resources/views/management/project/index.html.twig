{% extends '@App/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="alert alert-{{ type }}">
                        {{ flashMessage|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold float-left text-primary">Twoje projekty</h6>
                    <div class=" float-right">
                        <a class="btn btn-secondary btn-sm" href="{{ path('management_project_new') }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            Nowy projekt
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Skrót</th>
                            <th>Status</th>
                            <th>Kierownik</th>
                            <th>Czas</th>
                            <th>Działania</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                            <tr>
                                <th scope="row">1</th>
                                <td>{{ project.name }}</td>
                                <td>{{ project.shortname }}</td>
                                <td>{{ project.status }}</td>
                                <td><s>Andrzej</s></td>
                                <td>{{ project.time }}</td>
                                <td>
                                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                    <a class="btn btn-secondary btn-sm"  href="{{ path('management_project_show', {'id' : project.id}) }}">
                                        Zarządzaj
                                    </a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Zadania</h6>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Projekt</th>
                            <th>Przypisany pracownik</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                            {% for task in project.tasks %}
                                <tr>
                                    <th scope="row">1</th>
                                    <td>{{ task.name }}</td>
                                    <td>{{ task.project.name }}</td>
                                    <td>{{ task.user.fullName }}</td>
                                </tr>
                            {% endfor %}
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Ostatnio realizowane zadania</h6>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Nazwa</th>
                            <th>Projekt</th>
                            <th>Przypisany pracownik</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>test</td>
                            <td>test</td>
                            <td>test</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}