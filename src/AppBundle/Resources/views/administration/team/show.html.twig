{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - team
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-sm-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold float-left text-primary">Widok działu</h4>
                <div class="form-group float-right">
                    <a class="btn btn-secondary btn-sm" href="{{ path('team') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Wróć
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Id</strong></p>
                            <p>
                                {{ team.id }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Nazwa</strong></p>
                            <p>
                                {{ team.name }}
                            </p>

                        </div>
                    </div>

                    <hr/>


                    <div class="form-group float-right">
                        <a class="btn btn-primary" href="{{ path('team_edit', { 'id':  team.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Edytuj
                        </a>
                        <a class="btn btn-info" href="{{ path('team_new') }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Nowy
                        </a>
                        <form action="{{ path('teams_delete', { 'id': team.id }) }}" method="post"
                              style="display: inline-block">
                            <input type="hidden" name="_method" value="DELETE"/>
                            {{ form_widget(delete_form) }}
                            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                Usuń
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

