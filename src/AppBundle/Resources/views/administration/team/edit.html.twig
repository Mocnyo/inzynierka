{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Edycja zespołu {{ team.name }}
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h4 class="m-0 font-weight-bold float-left text-primary">Edytuj zespołu</h4>
                        <div class="form-group float-right">
                            <a class="btn btn-secondary btn-sm" href="{{ path('team') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                Wróć
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-sm-8">
                                {{ form_start(edit_form) }}
                                {{ form_row(edit_form.name, {'attr': { 'class': 'form-control' }}) }}

                            </div>
                        </div>
                        <hr/>
                        <div class="form-group float-right">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Aktualizuj
                            </button>
                            {{ form_end(edit_form) }}
                            <form action="{{ path('team_delete', { 'id': team.id }) }}" method="post"
                                  style="display: inline-block">
                                <input type="hidden" name="_method" value="DELETE"/>
                                {{ form_widget(delete_form) }}
                                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    Usuń
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
    {% endblock %}

