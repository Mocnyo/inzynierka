{% extends '@App/layout.html.twig' %}

{% block title %}
{{ parent() }} - team index
{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2><a href="{{ path('team') }}">Teams</a></h2>
        </div>
    </div>

<div class="col-md-3 pull-left">
        
    <!-- PAGE SIZE -->
    <div class="pagination form-inline ">
        <select class = "form-control"  onchange="window.location = this.value" >
            <option value='{{ path('team', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>20</option>
            <option value='{{ path('team', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>50</option>
            <option value='{{ path('team', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>10</option>
            <option value='{{ path('team', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
            <option value='{{ path('team', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
        </select>
    </div>
    <!-- END PAGE SIZE -->

</div>

<div class="col-md-6">


</div>

<div class="col-md-3 text-right">

    <a class="btn btn-primary h3 pull-right" href="{{ path('team_new') }}" style="margin-bottom:10px">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nowy
        </a>
    </a>
</div>
</div> <!-- /#top -->


<div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

<div class="row">

        <div class="table-responsive col-md-12">
        <form method="POST" id="bulk_form" action="{{ path('team_bulk_action') }} ">
            <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>

                        {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
                            <th>{{macros.th_sortable('name',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'team')}}</th>
    
                       
                        <th width = "220px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for team in teams %}
                    <tr>
                        <td>{{ team.name }}</td>

                        <td class="actions">
                            <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('team_delete', { 'id': team.id}) }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true">Usuń</span>
                            </a>
                            <a title='Show' class="btn btn-info btn-sm" href="{{ path('team_show', { 'id': team.id }) }}">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true">Pokaż</span>
                            </a>
                            <a  title='Edit' class="btn btn-primary btn-sm" href="{{ path('team_edit', { 'id': team.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true">Edytuj</span>
                            </a>
                        </td>

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>


        </div>
</div> <!-- /#list -->





{% endblock %}

