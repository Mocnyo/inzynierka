{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - team index
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-sm-12">

        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h4 class="m-0 font-weight-bold float-left text-primary">Działy</h4>
                        <div class="form-group float-right">
                            <a class="btn btn-secondary" href="{{ path('team_new') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                Dodaj
                            </a>
                        </div>
                    </div>

                    <div class="card-body" style="height: 700px; overflow: auto;">
                        <div class="row">
                            <div class="col-md-12">
                                {% for type, flashMessages in app.session.flashbag.all() %}
                                    {% for flashMessage in flashMessages %}
                                        <div class="alert alert-{{ type }}">
                                            {{ flashMessage|raw }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="table-responsive col-md-12">
                                <form method="POST" id="bulk_form" action="{{ path('team_bulk_action') }} ">
                                    <table class="table table-striped table-hover table-bordered" cellspacing="0"
                                           cellpadding="0">
                                        <thead>
                                        <tr>
                                            {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
                                            <th>Nazwa</th>
                                            <th width="220px">Działania</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for team in teams %}
                                            <tr>
                                                <td>{{ team.name }}</td>

                                                <td class="actions">
                                                    <a title='Show' class="btn btn-info btn-sm"
                                                       href="{{ path('team_show', { 'id': team.id }) }}">
                                                    <span class="glyphicon glyphicon-eye-open"
                                                          aria-hidden="true">Pokaż</span>
                                                    </a>
                                                    <a title='Edit' class="btn btn-primary btn-sm"
                                                       href="{{ path('team_edit', { 'id': team.id }) }}">
                                                    <span class="glyphicon glyphicon-pencil"
                                                          aria-hidden="true">Edytuj</span>
                                                    </a>
                                                    <a onclick="return confirm('Are you sure!');" title="Delete"
                                                       class="btn btn-danger btn-sm"
                                                       href="{{ path('team_delete', { 'id': team.id}) }}">
                                                    <span class="glyphicon glyphicon-remove"
                                                          aria-hidden="true">Usuń</span>
                                                    </a>
                                                </td>

                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

