{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - New team
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h4 class="m-0 font-weight-bold float-left text-primary">Dodaj nowy zespół</h4>
                        <div class="form-group float-right">
                            <a class="btn btn-secondary" href="{{ path('team') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                Wróć
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-sm-8 col-sm-6">

                                {{ form_start(form) }}
                                {{ form_row(form.name , {'attr': { 'class': 'form-control' }}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <hr/>
                                <p>
                                    <button type="submit" name="submit" value="save" class="btn btn-primary float-right">
                                        Dodaj <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                                    </button>
                                </p>
                            </div>
                        </div>


                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>



{% endblock %}

