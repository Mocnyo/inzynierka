{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - user index
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="page-header">
                                        <h2>Użytkownicy</h2>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-body" style="height: 700px;overflow: auto;">

                            <!-- FILTERING -->
                            <div class="col-md-12">
                                <div id="filters" class="collapse">

                                    <form class="well" action="{{ path('user') }}" method="get">
                                        <div class="row form-group">

                                            <div class="col-md-6">{{ form_row(filterForm.fullName) }}</div>

                                            <div class="col-md-6">
                                                <div class="col-md-6">{{ form_row(filterForm.team) }}</div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-warning"
                                                            name="filter_action" value="filter"><span
                                                                class="glyphicon glyphicon-filter"
                                                                aria-hidden="true"></span> Szukaj
                                                    </button>
                                                    <button type="submit" class="btn btn-danger"
                                                            name="filter_action" value="reset"><span
                                                                class="glyphicon glyphicon-minus"
                                                                aria-hidden="true"></span> Resetuj
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- END FILTERING -->

                            <div class="row">
                                <div class="col-sm-6 d-inline-block">
                                    <!-- PAGE SIZE -->
                                    <div class="pagination form-inline ">
                                        <select class="form-control" onchange="window.location = this.value">
                                            <option value='{{ path('user', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>
                                                10
                                            </option>
                                            <option value='{{ path('user', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>
                                                20
                                            </option>
                                            <option value='{{ path('user', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>
                                                50
                                            </option>
                                            <option value='{{ path('user', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>
                                                100
                                            </option>
                                            <option value='{{ path('user', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>
                                                500
                                            </option>
                                        </select>
                                    </div>
                                    <!-- END PAGE SIZE -->
                                </div>

                                <div class="col-sm-6 text-right d-inline-block">

                                    <a class="btn btn-primary h3 pull-right" href="{{ path('user_new') }}"
                                       style="margin-bottom:10px">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj
                                    </a>
                                    <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse"
                                       data-target="#filters">
                                        Szukaj
                                        <span class="caret"></span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-12">
                                {%- if form_errors(filterForm) %}
                                    <div class="alert alert-block alert-error fade in form-errors">
                                        {{ form_errors(filterForm) }}
                                    </div>
                                {% endif %}
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    {% for type, flashMessages in app.session.flashbag.all() %}
                                        {% for flashMessage in flashMessages %}
                                            <div class="alert alert-{{ type }}">
                                                {{ flashMessage|raw }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>


                            <div class="row">

                                <div class="table-responsive col-md-12">
                                    <form method="POST" id="bulk_form" action="{{ path('user_bulk_action') }} ">
                                        <table class="table table-striped table-hover table-bordered"
                                               cellspacing="0" cellpadding="0">
                                            <thead>
                                            <tr>

                                                {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
                                                <th>Imię i nazwisko</th>
                                                <th>Uprawnienia</th>
                                                <th>Dział</th>
                                                <th>Email</th>
                                                <th>Stanowisko</th>


                                                <th width="220px">Działania</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for user in users %}
                                                <tr>

                                                    <td>{{ user.fullName }}</td>
                                                    <td>
                                                        {% for role in user.roles %}
                                                            {% if role == "ROLE_USER" %}
                                                                Użytkownik
                                                            {% elseif role == "ROLE_ADMIN"%}
                                                                Kierownik
                                                            {% else %}
                                                                Administrator
                                                            {% endif %} <br>
                                                        {% endfor %}
                                                    </td>
                                                    <td>{{ user.team }}</td>
                                                    <td>{{ user.email }}</td>
                                                    <td>{{ user.position }}</td>

                                                    <td class="actions">
                                                        <a title='Show' class="btn btn-info btn-sm"
                                                           href="{{ path('user_show', { 'id': user.id }) }}">
                                                                <span class="glyphicon glyphicon-eye-open"
                                                                      aria-hidden="true">Pokaż</span>
                                                        </a>
                                                        <a title='Edit' class="btn btn-primary btn-sm"
                                                           href="{{ path('user_edit', { 'id': user.id }) }}">
                                                                <span class="glyphicon glyphicon-pencil"
                                                                      aria-hidden="true">Edytuj</span>
                                                        </a>
                                                        <a onclick="return confirm('Are you sure!');" title="Delete"
                                                           class="btn btn-danger btn-sm"
                                                           href="{{ path('user_delete', { 'id': user.id}) }}">
                                                                <span class="glyphicon glyphicon-remove"
                                                                      aria-hidden="true">Usuń</span>
                                                        </a>
                                                    </td>


                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </form>


                                </div>
                            </div> <!-- /#list -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

