{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Urządzenia
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="card col-md-12">
                <div class="card-header">
                    <h2>Pokaż urządzenia <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h2>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Id</strong></p>
                            <p>
                                {{ urzadzenium.id }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Producent</strong></p>
                            <p>
                                {{ urzadzenium.producent }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Model</strong></p>
                            <p>
                                {{ urzadzenium.model }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Numerseryjny</strong></p>
                            <p>
                                {{ urzadzenium.numerSeryjny }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Dataprodukcji</strong></p>
                            <p>
                                {% if urzadzenium.dataProdukcji %}{{ urzadzenium.dataProdukcji|date('Y-m-d H:i:s') }}{% endif %}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Czynnikchlodniczy</strong></p>
                            <p>
                                {{ urzadzenium.czynnikChlodniczy }}
                            </p>

                        </div>
                        <div class="col-md-6">
                            <p><strong>Masaczynnika</strong></p>
                            <p>
                                {{ urzadzenium.masaCzynnika }}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Kod kreskowy</strong></p>
                            <p>
                            <div class="col-md-6"> {{ barcode | raw }}</div>
                            </p>
                        </div>
                    </div>

                    <hr/>


                    <div class="form-group">
                        <a class="btn btn-secondary" href="{{ path('urzadzenia') }}">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                            Back to list
                        </a>
                        <a class="btn btn-primary" href="{{ path('urzadzenia_edit', { 'id':  urzadzenium.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Edit
                        </a>
                        <a class="btn btn-info" href="{{ path('urzadzenia_new') }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            New
                        </a>
                        <form action="{{ path('urzadzenia_delete', { 'id': urzadzenium.id }) }}" method="post"
                              style="display: inline-block">
                            <input type="hidden" name="_method" value="DELETE"/>
                            {{ form_widget(delete_form) }}
                            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

