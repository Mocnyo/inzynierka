{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Urządzenia
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="text-right">
            <a href="{{ path('urzadzenia_raport') }}" class="btn btn-primary btn-icon-split btn-sm mb-3">
                    <span class="icon text-white-50">
                      <i class="fas fa-flag"></i>
                    </span>
                <span class="text">Generuj raport</span>
            </a>
        </div>
        <div class="row">
            <div class="card col-md-12">
                <div class="card-header">
                    <h2><a href="{{ path('urzadzenia') }}">Urządzenia</a>
                    </h2>
                </div>
                <div class="card-body">

                    <!-- FILTERING -->
                    <div class="col-md-12">
                        <div id="filters" class="collapse">

                            <form class="well" action="{{ path('urzadzenia') }}" method="get">
                                <div class="row">
                                    <table>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.id) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.producent) }}</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.model) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.numerSeryjny) }}</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.dataProdukcji ) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.czynnikChlodniczy) }}</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.czynnikChlodniczy) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_row(filterForm.masaCzynnika) }}</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_widget(filterForm.firmaKlient, {'attr': {'style': 'display:none'}}) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_widget(filterForm.firmaOpiekun, {'attr': {'style': 'display:none'}}) }}</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="col-md-6">{{ form_widget(filterForm.obiekt, {'attr': {'style': 'display:none'}}) }}</div>
                                            </td>
                                            <td>
                                                <div class="col-md-6">{{ form_widget(filterForm.czynnosc, {'attr': {'style': 'display:none'}}) }}</div>
                                            </td>
                                        </tr>
                                    </table>
                                    <div class="col-md-6">
                                        {{ form_rest(filterForm) }}
                                    </div>
                                    <div class="col-md-12 mt-3">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-warning" name="filter_action"
                                                    value="filter"><span class="glyphicon glyphicon-filter"
                                                                         aria-hidden="true"></span> Filter
                                            </button>
                                            <button type="submit" class="btn btn-default" name="filter_action"
                                                    value="reset"><span class="glyphicon glyphicon-minus"
                                                                        aria-hidden="true"></span> Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END FILTERING -->

                    <div class="row">
                        <div class="col-md-3 pull-left">

                            <!-- PAGE SIZE -->
                            <div class="pagination form-inline ">
                                <select class="form-control" onchange="window.location = this.value">
                                    <option value='{{ path('urzadzenia', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>
                                        10
                                    </option>
                                    <option value='{{ path('urzadzenia', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>
                                        20
                                    </option>
                                    <option value='{{ path('urzadzenia', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>
                                        50
                                    </option>
                                    <option value='{{ path('urzadzenia', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>
                                        100
                                    </option>
                                    <option value='{{ path('urzadzenia', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>
                                        500
                                    </option>
                                </select>
                            </div>
                            <!-- END PAGE SIZE -->

                        </div>

                        <div class="col-md-6">


                        </div>

                        <div class="col-md-3 text-right">

                            <a class="btn btn-primary h3 pull-right" href="{{ path('urzadzenia_new') }}"
                               style="margin-bottom:10px">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
                            </a>
                            <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
                                Filter
                                <span class="caret"></span>
                            </a>
                        </div>

                    </div>
                    <div class="col-md-12">
                        {%- if form_errors(filterForm) %}
                            <div class="alert alert-block alert-error fade in form-errors">
                                {{ form_errors(filterForm) }}
                            </div>
                        {% endif %}
                    </div>

                </div> <!-- /#top -->


                <div class="row">
                    <div class="col-md-12">
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }}">
                                    {{ flashMessage|raw }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>


                <div class="row">

                    <div class="table-responsive col-md-12">
                        <form method="POST" id="bulk_form" action="{{ path('urzadzenia_bulk_action') }} ">
                            <table class="table table-striped table-hover table-bordered" cellspacing="0"
                                   cellpadding="0">
                                <thead>
                                <tr>
                                    <th width="20px"><input type="checkbox" class="check-all" onclick="toggleAll(this)">
                                    </th>

                                    {% import "@PetkoparaCrudGenerator/macros/th_sortable.html.twig" as macros %}
                                    <th>{{ macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Producent',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Model',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Numer seryjny',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Data produkcji',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Czynnik chłodniczy',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>
                                    <th>{{ macros.th_sortable('Masa czynnika',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'urzadzenia') }}</th>


                                    <th width="200px">List</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for urzadzenium in urzadzenias %}
                                    <tr>
                                        <td><input type="checkbox" name="ids[]" onclick='bulkSubmitBtnManage();'
                                                   class="check-all" value="{{ urzadzenium.id }}"/></td>
                                        <td>
                                            <a href="{{ path('urzadzenia_edit', { 'id': urzadzenium.id }) }}">{{ urzadzenium.id }}</a>
                                        </td>
                                        <td>{{ urzadzenium.producent }}</td>
                                        <td>{{ urzadzenium.model }}</td>
                                        <td>{{ urzadzenium.numerSeryjny }}</td>
                                        <td>{%- if urzadzenium.dataProdukcji %}{{ urzadzenium.dataProdukcji|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ urzadzenium.czynnikChlodniczy }}</td>
                                        <td>{{ urzadzenium.masaCzynnika }}</td>

                                        <td class="actions">
                                            <a onclick="return confirm('Are you sure!');" title="Delete"
                                               class="btn btn-danger btn-sm"
                                               href="{{ path('urzadzenia_by_id_delete', { 'id': urzadzenium.id}) }}">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true">Usuń</span>
                                            </a>
                                            <a title='Show' class="btn btn-info btn-sm"
                                               href="{{ path('urzadzenia_show', { 'id': urzadzenium.id }) }}">
                                                <span class="glyphicon glyphicon-eye-open"
                                                      aria-hidden="true">Pokaż</span>
                                            </a>
                                            <a title='Edit' class="btn btn-primary btn-sm"
                                               href="{{ path('urzadzenia_edit', { 'id': urzadzenium.id }) }}">
                                                <span class="glyphicon glyphicon-pencil"
                                                      aria-hidden="true">Edytuj</span>
                                            </a>
                                        </td>


                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </form>


                    </div>
                </div> <!-- /#list -->


                <div class="row">
                    <div class="col-md-4 pull-left">
                        <div class="pagination form-inline ">
                            <select class="form-control" name="bulk_action">
                                <option value="delete">DELETE</option>
                            </select>
                            <input type="submit" id='bulkSubmitBtn' onclick="return confirm('Are you sure?')"
                                   form="bulk_form" class="form-control btn btn-danger btn-sm" disabled>
                        </div>
                    </div>

                    <div class='col-md-3 pagination justify-content-center'>
                        <p>{{ totalOfRecordsString }}</p>
                    </div>

                </div> <!-- /#bottom -->

            </div>
        </div>
    </div>


{% endblock %}

