{% extends '@App/layout.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit urzadzenium
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="card col-md-12">
                <div class="card-header">
                    <h2>Edit urzadzenium <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            {% for type, flashMessages in app.session.flashbag.all() %}
                                {% for flashMessage in flashMessages %}
                                    <div class="alert alert-{{ type }}">
                                        {{ flashMessage|raw }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>


                        {{ form_start(edit_form) }}

                        <div class="col-sm-6"> {{ form_row(edit_form.producent) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.model) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.numerSeryjny) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.dataProdukcji) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.czynnikChlodniczy) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.masaCzynnika) }}</div>
                        <div class="col-sm-6"> {{ form_row(edit_form.kodKreskowy) }}</div>
                        <div class="col-sm-6"> {{ form_widget(edit_form.firmaKlient, {'attr': {'style': 'display:none'}}) }}</div>
                        <div class="col-sm-6"> {{ form_widget(edit_form.firmaOpiekun, {'attr': {'style': 'display:none'}}) }}</div>
                        <div class="col-sm-6"> {{ form_widget(edit_form.obiekt, {'attr': {'style': 'display:none'}}) }}</div>
                        <div class="col-sm-6 mt-3">
                            <p>
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
                                </button>
                            </p>
                        </div>
                        {{ form_end(edit_form) }}

                        <hr/>


                        <div class="form-group">
                            <a class="btn btn-secondary" href="{{ path('urzadzenia') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                Back to list
                            </a>
                            <a class="btn btn-info" href="{{ path('urzadzenia_new') }}">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                New
                            </a>
                            <form action="{{ path('urzadzenia_delete', { 'id': urzadzenium.id }) }}" method="post"
                                  style="display: inline-block">
                                <input type="hidden" name="_method" value="DELETE"/>
                                {{ form_widget(delete_form) }}
                                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

